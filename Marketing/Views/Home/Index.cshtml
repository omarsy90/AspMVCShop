@model IEnumerable<Product>
@using Marketing.Models
 <div class="row">

     <div class="col-sm-3 col-md-4 col-lg-3">
        <partial name="_FilterLayout" model="@ViewBag.Categories" />
     </div>

    <div class="row col-sm-9 col-md-8 col-lg-9" id="productsArea">
  
    @foreach(Product pro in Model)
    {
        <partial name="_ProductLayout" model="@pro" />   
    }
   </div>


    @section Scripts
        {
        <script src="@Url.Content("~/js/HomeIndexView.js")"></script>
    }


</div>