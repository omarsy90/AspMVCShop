
@model Marketing.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.ProductName" class="control-label"></label>
                <input asp-for="@Model.ProductName" class="form-control" />
                <span asp-validation-for="@Model.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ProductPrise" class="control-label"></label>
                <input asp-for="@Model.ProductPrise"  class="form-control" />
                <span asp-validation-for="@Model.ProductPrise" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ProductDescription" class="control-label"></label>
                <input asp-for="@Model.ProductDescription" class="form-control" />
                <span asp-validation-for="@Model.ProductDescription" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="@Model.ProductCategoryID" class="control-label"></label>
                <select asp-for="@Model.ProductCategoryID" class="form-select" aria-label="Default select example">
                @foreach (Category category in ViewBag.Categories)
                {
                    <option value="@category.ID" >@category.CategoryName</option>
                }
                </select>
            </div>



            <div class="form-group">
                <label asp-for="@Model.ImgUrl" class="control-label"></label>
             
                <input type="file"  asp-for="@Model.ImgUrl"  name="ImgUrl" accept="image/png, image/jpeg" class="form-control form-control-sm">
                <span asp-validation-for="@Model.ImgUrl" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:10px">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="form-group alert alert-danger" role="alert">
                    @Html.Raw(ViewBag.ErrorMessage)
                </div>
            }
            else if (ViewBag?.SuccessMessage != null)
            {
                <div class=" from-group alert alert-success" role="alert">
                    @Html.Raw(ViewBag?.SuccessMessage)
                 
                 </div>
            }
            

        </form>
    </div>
</div>

<div>
    <a  asp-action="Index">Back to List</a>
</div>

