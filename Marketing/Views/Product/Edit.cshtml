@using Marketing.Models
@model Marketing.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" action="~/product/Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.ID" />
            <div class="form-group">
                <label asp-for="@Model.ProductName" class="control-label"></label>
                <input asp-for="@Model.ProductName" class="form-control" />
                <span asp-validation-for="@Model.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ProductPrise" class="control-label"></label>
                <input asp-for="@Model.ProductPrise" class="form-control"  />
                <span asp-validation-for="@Model.ProductPrise" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ProductDescription" class="control-label"></label>
                <input asp-for="@Model.ProductDescription" class="form-control" />
                <span asp-validation-for="@Model.ProductDescription" class="text-danger"></span>
            </div>
           

            <div class="form-group">
                <label asfor-for="@Model.ProductCategoryID" class="control-label"></label>
                <select asp-for="@Model.ProductCategoryID" class="form-control">

                    @foreach (Category ct in ViewBag.Categories)
                    {
                        if(ct.ID == Model.ProductCategoryID)
                        {
                            <option value="@ct.ID" selected>@ct.CategoryName</option>
                        }else{
                            <option value="@ct.ID">@ct.CategoryName</option>
                        }
                       
                    }
                    
                   
                </select>

            </div>

            <div class="form-group" style="margin-top:10px">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            @if (@ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    @Html.Raw(ViewBag.ErrorMessage );
                </div>
            }
                   
            
        </form>
    </div>
</div>

